networks:
  asakabank.userapi-dev:
    driver: bridge
services:
  asakabank.userapi:
    build:
      context: D:\Projects\VisualStudio\Asakabank
      dockerfile: Asakabank.UserApi/Dockerfile
    depends_on:
      postgres_image:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: asakabankuserapi
    networks:
      asakabank.userapi-dev: {}
    ports:
    - published: 3000
      target: 80
    - target: 80
    - published: 3030
      target: 443
    - target: 443
    volumes:
    - C:\Users\Developer\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Developer\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  pgadmin:
    environment:
      PGADMIN_DEFAULT_EMAIL: pgadmin@pgadmin.org
      PGADMIN_DEFAULT_PASSWORD: admin
    image: dpage/pgadmin4
    ports:
    - published: 5050
      target: 80
    restart: unless-stopped
    volumes:
    - pgadmin:/root/.pgadmin:rw
  postgres_image:
    environment:
      POSTGRES_DB: userapidb
      POSTGRES_PASSWORD: postgres
      POSTGRES_USER: postgres
    image: postgres:latest
    networks:
      asakabank.userapi-dev: {}
    ports:
    - published: 5432
      target: 5432
    restart: always
    volumes:
    - db_volume:/var/lib/postgresql/data:rw
version: '3.4'
volumes:
  db_volume: {}
  pgadmin: {}